<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_exit"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5sp"
        android:layout_marginRight="30sp"
        android:layout_marginTop="5sp"
        android:gravity="center" >

        <RelativeLayout
            android:id="@+id/loading_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15sp" >

            <ImageView
                android:id="@+id/dialog_icon"
                android:layout_width="36sp"
                android:layout_height="36sp"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:id="@+id/edit_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7sp"
                android:layout_marginLeft="10sp"
                android:layout_toRightOf="@+id/dialog_icon"
                android:text="提示"
                android:textColor="#33b5e5"
                android:textSize="18sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/divider"
            android:layout_width="fill_parent"
            android:layout_height="2px"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/loading_top"
            android:layout_marginTop="5sp"
            android:background="#33b5e5" />

        <EditText
            android:id="@+id/dialog_msg"
            android:layout_width="fill_parent"
            android:layout_height="96sp"
            android:layout_below="@id/divider"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="5sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:background="@drawable/edit_bg"
            android:textColor="#1d1d1d"
            android:textSize="15sp" />
        
        <TextView
            android:id="@+id/divider_light"
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/dialog_msg"
            android:layout_marginTop="5sp"
            android:background="#969696" />

        <LinearLayout
            android:id="@+id/dialog_buttom"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider_light"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/dialog_cancel"
                android:layout_weight="1"
                android:layout_width="0dip"
                android:layout_height="42sp"
                android:background="@drawable/button_dialog_exit_bg"
                android:clickable="true"
                android:text="@string/cancel"
                android:textColor="@drawable/button_dialog_color" />

            <Button
                android:id="@+id/dialog_ok"
                android:layout_weight="1"
                android:layout_width="0dip"
                android:layout_height="42sp"
                android:background="@drawable/button_dialog_exit_bg"
                android:clickable="true"
                android:text="@string/ok"
                android:textColor="@drawable/button_dialog_color" />
        </LinearLayout>

        <TextView
            android:layout_width="1px"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/dialog_buttom"
            android:layout_below="@id/divider_light"
            android:layout_centerInParent="true"
            android:background="#969696" />
    </RelativeLayout>

</RelativeLayout>