<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
     <style name="txTheme" parent="@android:style/Theme.NoTitleBar">
         <item name="android:windowBackground">@drawable/bj</item>
         <item name="android:textColor">#000</item>
     </style>
     <style name="txTheme2" parent="@android:style/Theme.NoTitleBar">
         <item name="android:windowBackground">@drawable/beauty</item>
