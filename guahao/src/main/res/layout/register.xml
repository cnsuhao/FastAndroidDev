<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/registertLayout"
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:background="#46a0f0">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@drawable/back"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/register"
            android:textSize="20sp"
            android:textColor="@color/white"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_below="@id/registertLayout">

        <RelativeLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tip_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/reg_tip"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"/>

    <RelativeLayout
        android:id="@+id/registertLayout1"
        android:layout_width="220dp"
        android:layout_height="45dp"
        android:layout_below="@id/tip_text"
        android:layout_marginTop="20dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/nameText"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:src="@drawable/name_img"
            android:gravity="center"
            android:paddingLeft="20dp" />

        <EditText
            android:id="@+id/nameEdit"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:hint="@string/input_name"
            android:textSize="15sp"
            android:textColorHint="#bfbfbf"
            android:layout_toRightOf="@id/nameText"
            android:paddingLeft="20dp"
            android:background="@color/white"/>
    </RelativeLayout>

        <RelativeLayout
            android:id="@+id/registertLayout2"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_below="@id/tip_text"
            android:layout_marginTop="20dp"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/registertLayout1">
        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true">

            <RadioButton
                android:id="@+id/boyBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:layout_marginRight="10dp"
                android:text="男"/>

            <RadioButton
                android:id="@+id/girlBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="女" />
        </RadioGroup>
    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/registertLayout1"
        android:background="#e6e6e6"></View>

    <RelativeLayout
        android:id="@+id/registertLayout3"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_below="@id/line"
        android:background="@color/white">

        <ImageView
            android:id="@+id/card_img"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:src="@drawable/card_img"
            android:gravity="center"
            android:paddingLeft="20dp" />

        <EditText
            android:id="@+id/cardEdit"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="@string/input_card"
            android:textSize="15sp"
            android:textColorHint="#bfbfbf"
            android:layout_toRightOf="@id/card_img"
            android:paddingLeft="20dp"
            android:background="@color/white"/>
    </RelativeLayout>

    <View
        android:id="@+id/line1"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/registertLayout3"
        android:background="#e6e6e6"></View>


    <RelativeLayout
        android:id="@+id/registertLayout4"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_below="@id/line1"
        android:background="@color/white">

        <ImageView
            android:id="@+id/both_img"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:src="@drawable/both_img"
            android:gravity="center"
            android:paddingLeft="20dp" />

        <EditText
            android:id="@+id/bothEdit"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="@string/input_both"
            android:textSize="15sp"
            android:textColorHint="#bfbfbf"
            android:layout_toRightOf="@id/both_img"
            android:paddingLeft="20dp"
            android:background="@color/white"/>
    </RelativeLayout>

    <View
        android:id="@+id/line2"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/registertLayout4"
        android:background="#e6e6e6"></View>

    <RelativeLayout
        android:id="@+id/registertLayout5"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_marginTop="40dp"
        android:layout_below="@id/line2"
        android:background="@color/white">

        <ImageView
            android:id="@+id/phone_img"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:src="@drawable/phone_img"
            android:gravity="center"
            android:paddingLeft="18dp" />

        <EditText
            android:id="@+id/phoneEdit"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="@string/input_phones"
            android:textSize="15sp"
            android:textColorHint="#bfbfbf"
            android:layout_toRightOf="@id/phone_img"
            android:paddingLeft="18dp"
            android:background="@color/white"/>
    </RelativeLayout>

    <View
        android:id="@+id/line3"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/registertLayout5"
        android:background="#e6e6e6"></View>

    <RelativeLayout
        android:id="@+id/registertLayout6"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_below="@id/line3"
        android:background="@color/white">

        <ImageView
            android:id="@+id/psd_img"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:src="@drawable/pwd_img"
            android:gravity="center"
            android:paddingLeft="20dp" />

        <EditText
            android:id="@+id/psdEdit"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:inputType="textPassword"
            android:hint="@string/set_pwd"
            android:textSize="15sp"
            android:textColorHint="#bfbfbf"
            android:layout_toRightOf="@id/psd_img"
            android:paddingLeft="20dp"
            android:background="@color/white"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/psd_img"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="25dp"/>

    </RelativeLayout>

    <View
        android:id="@+id/line4"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/registertLayout6"
        android:background="#e6e6e6"></View>


    <RelativeLayout
        android:id="@+id/registertLayout7"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_below="@id/line4"
        android:background="@color/white">

        <ImageView
            android:id="@+id/msg_img"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:src="@drawable/msg_img"
            android:gravity="center"
            android:paddingLeft="20dp" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/white"
            android:paddingLeft="20dp"
            android:layout_toRightOf="@id/msg_img"
            android:hint="@string/identify_msg"
            android:textSize="15sp"
            android:textColorHint="#bfbfbf" />

        <Button
            android:id="@+id/getIdentify"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:text="@string/identify"
            android:background="@drawable/shape"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="18dp"/>
    </RelativeLayout>

            <View
                android:id="@+id/line5"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_below="@id/registertLayout7"
                android:background="#e6e6e6"></View>


            <Button
                android:id="@+id/registerBtn"
                android:layout_width="310dp"
                android:layout_height="45dp"
                android:layout_below="@id/line5"
                android:layout_marginTop="40dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/shape"
                android:text="@string/register"
                android:textColor="@color/white"
                android:textSize="20sp"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/registerBtn">

                <CheckBox
                    android:id="@+id/agree"
                    android:button="@drawable/checkbox_agree"
                    android:text="@string/agree_text"
                    android:textSize="13sp"
                    android:textColor="#707070"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/agreement"
                    android:textColor="#46a0f0"
                    android:layout_marginTop="1dp"
                    android:textSize="13sp"
                    android:layout_toRightOf="@id/agree"/>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
