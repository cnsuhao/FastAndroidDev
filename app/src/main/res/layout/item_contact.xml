<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="com.ijustyce.fastandroiddev.example.model.Contact" />
        <import type="com.ijustyce.fastandroiddev.example.event.ContactEvent" />
        <variable
            name="user"
            type="Contact" />

        <variable
            name="handler"
            type="ContactEvent" />
    </data>

    <RelativeLayout
        android:background="@drawable/radius_fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{(view) -> handler.onClick(view, user)}"
        android:layout_marginLeft="16px"
        android:layout_marginRight="16px"
        android:layout_marginTop="16px"
        android:padding="16px"
        android:orientation="vertical">

        <ImageView
            app:imageUrl="@{user.head}"
            app:width="@{65}"
            app:height="@{65}"
            app:corner="@{8}"
            app:type="@{5}"
            android:id="@+id/header"
            android:src="@mipmap/ic_launcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/name"
            android:layout_marginLeft="25px"
            android:layout_toRightOf="@id/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15px"
            android:textSize="36px"
            android:textColor="@color/mainTextColor"
            android:text="@{user.name}" />

        <TextView
            android:id="@+id/phone"
            android:layout_below="@id/name"
            android:layout_marginTop="15px"
            android:layout_alignLeft="@id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28px"
            android:textColor="@color/secondTextColor"
            android:text='@{user.phone}' />

    </RelativeLayout>
</layout>